---
import navItems from "../../data/navItems";
---

<nav class="Navbar">

	

	{
		navItems.map((a) => (
			<a class="Navbar-link" href={a.href}>
				{a.text}
			</a>
		))
	}
</nav>

<style lang="scss">
	.Navbar {
		gap: 2.5em;
		display: flex;
		flex-flow: row wrap;
		align-items: center;

		&-link {
			color: var(--ui-purple-light);
			text-decoration: none;
			text-transform: capitalize;
		}
	}
</style>
