---
import navItems from "@/data/navItems";
import Bars from "./Bars.astro";
import Brand from "./Brand.astro";
---

<Brand />
<Bars />

<nav class="Header-nav">
	{
		navItems.map((item) => (
			<a href={item.href}>
				{item.text === "contacto" && <span>Algo</span>} {item.text}
			</a>
		))
	}
</nav>

<style lang="scss">
	.Header-nav {
		display: flex;
		flex-flow: row nowrap;
		gap: 1em;

		@media screen and (max-width: 768px) {
			position: absolute;
			top: 93px;
			background-color: rgb(39, 5, 50);
			width: 45vw;
			right: 2em;
			display: flex;
			flex-flow: column nowrap;
			justify-content: center;
			align-items: center;
			transition: all 0.3s ease;
			height: 0vh;
			overflow: hidden;
			pointer-events: all;
			z-index: 5;

			&.isActive {
				height: 25vh;
			}
		}
	}
	.Header-link {
		color: aqua;
		text-decoration: none;
		font-size: 0.8rem;
		text-transform: uppercase;
	}
</style>
